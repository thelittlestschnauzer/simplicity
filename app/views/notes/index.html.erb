<main class="container home">
  <div class="row home-header">

    <div class="col-md-1 mr-auto">
      <button id="new-note-button" class="btn btn-primary mr-auto">new</button>
      <div id="new-note-popover" class="note-popover is-hidden">
        <%= form_with(model: @note) do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control",  id: "note-title-input", placeholder: "next idea", autoFocus: true %>
        </div>
        <%= f.submit "save", id: "save-button", class: "btn btn-success" %>
        <button id="cancel-note-popover" class="btn btn-secondary">maybe not</button>
        <% end %>
      </div>
    </div>

      <div class="col-md-4">
        <h3 class="text-center">Notes</h3>
      </div>

      <div class="col-md-1 ml-auto">
        <button id="dot-button" class="btn ml-auto">...</button>
      </div>
   </div>

   <div id="note-list" class="row home-notes">
     <% @notes.each do |note| %>
        <%= render 'note_card', note: note %>
    <% end %>
  </div>
</main>
