<%= bootstrap_form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@recipe.errors.count, "error") %>
      this error caused the recipe not to be persisted to the database:
    </h2>

    <ul>
    <% @recipes.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.text_field :title, class: 'form-control recipe-form edit-form', placeholder: 'recipe name' %>
  <%= f.text_area :description, class: 'form-control recipe-form edit-form', placeholder: 'description' %>

  <%= f.submit 'new recipe', class: 'btn' %>
<% end %>
