<%= simple_form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@recipe.errors.count, "error") %>
      this error caused the recipe not to be persisted to the database:
    </h2>

    <ul>
    <% @recipes.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.input :title, class: 'form-control recipe-form edit-form' %>
  <%= f.input :description, class: 'form-control recipe-form edit-form' %>
  <%= f.file_field :image %>

  <h3 id="ingredients">Ingredients</h3>
    <% @recipe.ingredients.each do |ingredient| %>
      <%= field_set_tag 'Ingredient' do %>
        <%= f.simple_fields_for :ingredients, ingredient do |if| %>
        <%= if.input :name %>
        <% end %>
      <% end %>
      <%= f.button 'submit', class: 'btn' %>
  </div>
<% end %>
