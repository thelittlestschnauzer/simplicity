
<div class="row">
    <div class="col-md-4">
      <div class="recipe">
        <div class="image_wrapper">
          <%= image_tag @recipe.image.url(:medium), class: 'recipe-image' %>
          <h2><%= @recipe.title %></h2></br>
          <p class="description"><%= @recipe.description %></p></br>
          <p class="links-recipes"><%= link_to 'new', new_recipe_path %> | <%= link_to 'back', recipes_path %> | <%= link_to 'delete', method: :destroy, data: {confirm: "Are you sure?"}%></p>
        </div>
      </div>
    </div>
</div>
